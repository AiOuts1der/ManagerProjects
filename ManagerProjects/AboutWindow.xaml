<Window x:Class="ManagerProjects.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerProjects"
        mc:Ignorable="d"
        Title="О программе" Height="350" Width="300" WindowStartupLocation="CenterScreen">

    <StackPanel   HorizontalAlignment="Left" Margin="20 10 10 10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock FontSize="12"  Margin="0 10 10 0" >Название приложения:</TextBlock>
            <TextBlock x:Name="ProgName" FontSize="12"  Margin="0 30 0 0" ></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock FontSize="12"  Margin="0 10 10 0" >Версия программы:</TextBlock>
            <TextBlock x:Name="ProgVersion" 
                       FontSize="12"  
                       Margin="0 30 0 0" ></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Left">
            <TextBlock FontSize="12"  
                       Margin="0 10 10 0" >Описание</TextBlock>
            <TextBox x:Name="ProgDescription" 
                     FontSize="12"  
                     Margin="0 10 0 0"></TextBox>
        </StackPanel>
    </StackPanel>
</Window>
