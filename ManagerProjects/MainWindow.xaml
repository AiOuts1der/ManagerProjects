<Window x:Class="ManagerProjects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerProjects"
        mc:Ignorable="d"
        Title="Менеджер проектов"
        Height="auto"
        Width="auto"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top"
              FontSize="14">
            <MenuItem x:Name="Home"
                      Header="Главная"
                      Click="Home_Click" />
            <MenuItem x:Name="Create" 
                      Header="Создать проект" 
                      Click="CreateProject_Click"/>
            <MenuItem x:Name="Editor"
                      Header="Редактор проекта"
                      Click="Editor_Click" />
            <MenuItem x:Name="Delete" 
                      Header="Удалить проект" 
                      Click="Delete_Click"/>
            <MenuItem x:Name="Data"
                      Header="Сводка данных"
                      Click="Data_Click" />
            <MenuItem x:Name="About"
                      Header="О программе"
                      Click="About_Click" />
        </Menu>
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
