<Window x:Class="ManagerProjects.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerProjects"
        mc:Ignorable="d"
        Title="InputDialog" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Name="lblQuestion" Grid.Row="0"/>
        <TextBox Name="txtAnswer" Grid.Row="1" Margin="0,5,0,5"/>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="ОК" 
                    Name="btnOk" 
                    Width="75" 
                    Margin="0,0,5,0" 
                    Click="btnOk_Click"/>
            <Button Content="Назад" 
                    Name="btnCancel" 
                    Width="75" 
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
