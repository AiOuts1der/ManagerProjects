<Window x:Class="ManagerProjects.CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerProjects"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Создание нового проекта" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Создание нового проекта" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Основная информация -->
                <GroupBox Header="Основная информация" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название проекта:" Margin="5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="txtTitle" Margin="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата начала разработки:" Margin="5"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" Name="dpStartDev" Margin="5" 
                                    DisplayDateStart="2010-01-01" 
                                    SelectedDate="{x:Static sys:DateTime.Now}"
                                    SelectedDateFormat="Short"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата внедрения:" Margin="5"/>
                        <DatePicker Grid.Row="2" Grid.Column="1" Name="dpStartProd" Margin="5" 
                                    DisplayDateStart="2010-01-01" 
                                    SelectedDate="{x:Static sys:DateTime.Now}"
                                    SelectedDateFormat="Short"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Текущая версия:" Margin="5"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Name="txtVersion" Margin="5" Text="1.0.0.0"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Статус:" Margin="5"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" Name="cbStatus" Margin="5" SelectedIndex="0">
                            <ComboBoxItem Content="В разработке"/>
                            <ComboBoxItem Content="В тестировании"/>
                            <ComboBoxItem Content="В эксплуатации"/>
                            <ComboBoxItem Content="Архивный"/>
                        </ComboBox>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Кол-во рабочих мест:" Margin="5"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Name="txtWorkplaces" Margin="5" Text="1"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Комментарий:" Margin="5"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Name="txtComment" Margin="5" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </GroupBox>

                <!-- Ссылки -->
                <GroupBox Header="Ссылки" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Директория с релизами:" Margin="5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="txtReleasesUrl" Margin="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ссылка на Git:" Margin="5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="txtGitUrl" Margin="5"/>
                    </Grid>
                </GroupBox>

                <!-- Ответственный разработчик -->
                <GroupBox Header="Ответственный разработчик" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:" Margin="5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="txtLastName" Margin="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" Margin="5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="txtFirstName" Margin="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" Margin="5"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="txtPatronymic" Margin="5"/>
                    </Grid>
                </GroupBox>

                <!-- Подразделения -->
                <GroupBox Header="Подразделения, использующие проект">
                    <StackPanel>
                        <ListBox Name="lbDepartments" Height="100" Margin="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Title}" IsChecked="{Binding IsSelected}" Margin="2"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="Добавить подразделение" Name="btnAddDepartment" Click="btnAddDepartment_Click" Margin="5" HorizontalAlignment="Left"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Создать" Name="btnCreate" Width="100" Margin="5" Click="btnCreate_Click"/>
            <Button Content="Отмена" Name="btnCancel" Width="100" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>